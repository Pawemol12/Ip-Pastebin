{% extends 'base.html.twig' %}

{% set title='pastebin.pasteViewTitle'|trans %}

{% block body %}
    <div class="row">
        <div class="col">
            <h2>{{ title }}</h2>
            <hr/>
        </div>
    </div>
    {% if paste is defined and paste %}
    <div class="row">
        <div class="col">
            <span id="pasteTitle"><strong>{% trans %}pastebin.paste.title{% endtrans %}</strong>:
            {{ paste.title }}
            </span><br/>

            <span id="pasteCode"><strong>{% trans %}pastebin.paste.code{% endtrans %}</strong>:
            {{ paste.code }}
            </span><br/>

            <span id="pasteCreateDate"><strong>{% trans %}pastebin.paste.createDate{% endtrans %}</strong>:
            {{ paste.createDate|date('Y-m-d H:i:s')  }}
            </span><br/>

            <span id="pasteExpireDate"><strong>{% trans %}pastebin.paste.expireDate{% endtrans %}</strong>:
            {{ paste.expireDate ? paste.expireDate|date('Y-m-d H:i:s') : 'pastebin.paste.notExpire'|trans  }}
            </span><br/>

            <span id="pasteExpireDate"><strong>{% trans %}pastebin.paste.createdBy{% endtrans %}</strong>:
            {{ paste.user ? paste.user.username : 'anonim'|trans  }}
            </span><br/>

            <span id="pasteTextLabel"><strong>{% trans %}pastebin.paste.text{% endtrans %}</strong>:</span><br/>

            <div id="pasteText">{{  pasteText|raw }}</div>

        </div>
    </div>
    {% endif %}
    <div class="row">
        <div class="col">
            {% include 'snippets/alertContainer.html.twig' %}
        </div>
    </div>
{% endblock %}
