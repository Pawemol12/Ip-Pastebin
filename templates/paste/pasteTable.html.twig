<table class="table table-striped table-bordered nowrap">
    <thead class="thead-light">
    <th scope="col">{% trans %}lp{% endtrans %}</th>
    <th scope="col">{% trans %}pastebin.paste.title{% endtrans %}</th>
    <th scope="col">{% trans %}pastebin.paste.code{% endtrans %}</th>
    <th scope="col">{% trans %}pastebin.paste.date{% endtrans %}</th>
    <th scope="col">{% trans %}actions{% endtrans %}</th>
    </thead>

    <tbody>
    {% for paste in pasteList %}
        <tr>
            <td scope="row">{{ loop.index }}</td>
            <td>{{ paste.title }}</td>
            <td>{{ paste.code }}</td>
            <td>{{ paste.date|date('Y-m-d H:i:s') }}</td>
            <td>
                <a href="{{ path('pasteView', {'pasteCode': paste.code}) }}">{% trans %}view{% endtrans %}</a>
            </td>
        </tr>
    {% endfor %}

    </tbody>
</table>